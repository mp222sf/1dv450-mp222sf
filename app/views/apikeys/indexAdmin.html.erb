<%= render "layouts/menuLoggedInAdmin" %>
<h1>API-nycklar</h1>

<div id="container">
    <div id="apiKeys">
        <div class="apiKeyRow header">
            <div class="apiKeyUser">Anv√§ndare</div>
            <div class="apiKeyAppName">Applikationsnamn</div>
            <div class="apiKeyAppURL">URL</div>
            <div class="apiKeyValue">Nyckel</div>
        </div>
        <% row = true %>
        
        <% @keys.each do |p| %>
            <div class="apiKeyRow<% if row == false %> rowEqual<% end %>">
                <div class="apiKeyUser"><%= @auth.find(p.authentication_id).username %></div>
                <div class="apiKeyAppName"><%= p.appName %></div>
                <div class="apiKeyAppURL"><%= p.appURL %></div>
                <div class="apiKeyValue"><%= p.key %></div>
                <div class="apiKeyDelete"><%= link_to 'Ta bort', apikey_path(p.id), :method => :delete, data: { confirm: 'Vill du ta bort nyckeln?' } %></div>
            </div>
            <% row = !row %>
        <% end %> 
    </div>
</div>